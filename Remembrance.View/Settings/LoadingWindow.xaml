<animatedWindow:BaseWindow
    x:Class="Remembrance.View.Settings.LoadingWindow"
    x:ClassModifier="internal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedWindow="clr-namespace:Scar.Common.WPF.View;assembly=Scar.Common.WPF.View"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    Topmost="True"
    WindowStyle="None"
    Background="Transparent"
    AllowsTransparency="True"
    ShowInTaskbar="False"
    ShowActivated="False"
    Focusable="False"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen">
    <animatedWindow:BaseWindow.Resources>
        <ResourceDictionary
            Source="pack://application:,,,/Scar.Common.WPF.Controls.Styles;component/Spinner.xaml" />
    </animatedWindow:BaseWindow.Resources>
    <Control
        ToolTip="{lex:Loc Remembrance.Resources:Texts:Loading}"
        Style="{StaticResource BusyAnimationStyle}" />
</animatedWindow:BaseWindow>