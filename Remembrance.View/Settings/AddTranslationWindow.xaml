<window:AnimatedWindow
    x:Class="Remembrance.View.Settings.AddTranslationWindow"
    x:ClassModifier="internal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="{lex:Loc Title}"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:window="clr-namespace:Scar.Common.WPF.View;assembly=Scar.Common.WPF.View.AnimatedWindow"
    xmlns:viewModel="clr-namespace:Remembrance.ViewModel.Settings;assembly=Remembrance.ViewModel"
    xmlns:view="clr-namespace:Remembrance.View.Settings"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:LocalizeDictionary.OutputMissingKeys="True"
    lex:ResxLocalizationProvider.DefaultAssembly="Remembrance.Resources"
    lex:ResxLocalizationProvider.DefaultDictionary="Texts"
    d:DataContext="{d:DesignInstance d:Type=viewModel:AddTranslationViewModel}"
    SizeToContent="Height"
    AdvancedWindowStartupLocation="BottomLeft"
    WindowStartupLocation="Manual"
    Draggable="False"
    Width="500"
    Icon="../IconAlt.ico">
    <view:AddTranslationControl
        x:Name="AddTranslationControl"
        VerticalAlignment="Center"
        VerticalContentAlignment="Center" />
</window:AnimatedWindow>