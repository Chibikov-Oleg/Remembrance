<animatedWindow:AnimatedWindow
    x:Class="Remembrance.View.Windows.DictionaryWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedWindow="clr-namespace:Scar.Common.WPF.View;assembly=Scar.Common.WPF.View.AnimatedWindow"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:commonView="clr-namespace:Scar.Common.WPF.View;assembly=Scar.Common.WPF.View"
    xmlns:controls="clr-namespace:Remembrance.View.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="clr-namespace:Remembrance.View.Dialogs"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Remembrance.ViewModel;assembly=Scar.Remembrance.ViewModel"
    Title="{lex:Loc Title}"
    Width="1200"
    Height="400"
    MinWidth="1250"
    MinHeight="300"
    d:DataContext="{d:DesignInstance d:Type=viewModel:DictionaryViewModel}"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:LocalizeDictionary.OutputMissingKeys="True"
    lex:ResxLocalizationProvider.DefaultAssembly="Scar.Remembrance.Resources"
    lex:ResxLocalizationProvider.DefaultDictionary="Texts"
    x:ClassModifier="internal"
    Background="{StaticResource DarkerBackground}"
    Icon="pack://application:,,/Scar.Remembrance.View;component/Images/IconAlt.ico"
    ResizeMode="CanResize"
    SizeToContent="Manual"
    WindowState="Normal"
    mc:Ignorable="d">
    <animatedWindow:AnimatedWindow.Resources>
        <commonView:DesignTimeResourceDictionary Source="pack://application:,,,/Scar.Remembrance.View;component/DesignTimeResources.xaml" />
    </animatedWindow:AnimatedWindow.Resources>
    <!--  Allow Resize  -->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="ContentRenderAnimationFinished">
            <b:InvokeCommandAction Command="{Binding WindowContentRenderedCommand, Mode=OneTime}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <materialDesign:DialogHost IsOpen="{Binding EditManualTranslationsViewModel.IsManualTranslationsDialogOpen, Mode=OneWay}">
        <materialDesign:DialogHost.DialogContent>
            <dialogs:EditManualTranslationsDialog DataContext="{Binding EditManualTranslationsViewModel, Mode=OneTime}" />
        </materialDesign:DialogHost.DialogContent>
        <Grid
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            commonView:MarginSetter.Margin="{StaticResource CommonMargin}"
            commonView:MarginSetter.Orientation="Vertical">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0">
                <controls:SearchControl VerticalAlignment="Center" VerticalContentAlignment="Center" />
            </DockPanel>
            <controls:TranslationsGridControl Grid.Row="1" Width="Auto" />
            <DockPanel
                Grid.Row="2"
                commonView:MarginSetter.Margin="{StaticResource CommonMargin}"
                commonView:MarginSetter.Orientation="Horizontal">
                <TextBlock
                    DockPanel.Dock="Left"
                    Style="{StaticResource Logo}"
                    Text="Remembrance" />
                <Button
                    Command="{Binding OpenSettingsCommand, Mode=OneTime}"
                    Style="{StaticResource ImageButton}"
                    ToolTip="{lex:Loc EditSettings}">
                    <materialDesign:PackIcon Kind="Settings" />
                </Button>
                <TextBlock Text="{lex:Loc Total}" />
                <TextBlock Text="{Binding Count, Mode=OneWay}" />
                <controls:AddTranslationControl
                    Width="900"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    DockPanel.Dock="Right" />
            </DockPanel>
        </Grid>
    </materialDesign:DialogHost>
</animatedWindow:AnimatedWindow>
