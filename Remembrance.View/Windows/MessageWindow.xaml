<animatedWindow:AnimatedWindow
    x:Class="Remembrance.View.Windows.MessageWindow"
    x:ClassModifier="internal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="{lex:Loc Title}"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:animatedWindow="clr-namespace:Scar.Common.WPF.View;assembly=Scar.Common.WPF.View.AnimatedWindow"
    xmlns:commonView="clr-namespace:Scar.Common.WPF.View;assembly=Scar.Common.WPF.View"
    xmlns:viewModel="clr-namespace:Remembrance.ViewModel;assembly=Remembrance.ViewModel"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:LocalizeDictionary.OutputMissingKeys="True"
    lex:ResxLocalizationProvider.DefaultAssembly="Remembrance.Resources"
    lex:ResxLocalizationProvider.DefaultDictionary="Texts"
    d:DataContext="{d:DesignInstance d:Type=viewModel:MessageViewModel}"
    SizeToContent="WidthAndHeight"
    AdvancedWindowStartupLocation="TopLeft"
    WindowStartupLocation="Manual"
    Draggable="False"
    ShowActivated="False"
    Focusable="False"
    Topmost="True"
    ShowInTaskbar="False"
    AutoCloseTimeout="{Binding AutoCloseTimeout, Mode=OneTime}"
    Icon="pack://application:,,/Remembrance.View;component/Images/IconAlt.ico">
    <animatedWindow:AnimatedWindow.Resources>
        <commonView:DesignTimeResourceDictionary
            Source="pack://application:,,,/Remembrance.View;component/DesignTimeResources.xaml" />
    </animatedWindow:AnimatedWindow.Resources>
    <Border
        BorderThickness="2"
        BorderBrush="{StaticResource Border}"
        Padding="10"
        Background="{Binding Message.Type, Mode=OneTime, Converter={StaticResource MessageTypeToBackgroundBrushConverter}}">
        <TextBlock
            Foreground="{Binding Message.Type, Mode=OneTime, Converter={StaticResource MessageTypeToForegroundBrushConverter}}"
            Text="{Binding Message.Text, Mode=OneTime}" />
    </Border>
</animatedWindow:AnimatedWindow>