<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWpf>True</UseWpf>
    <Description>Launcher application for Mémoire</Description>
    <ApplicationIcon>IconAlt.ico</ApplicationIcon>
    <OutputType>WinExe</OutputType>
    <StartupObject>Mémoire.Launcher.App</StartupObject>
    <OutputPath>..\Build\</OutputPath>
    <AssemblyName>Mémoire</AssemblyName>
    <!--<PublishTrimmed>true</PublishTrimmed>
    <PublishReadyToRun>true</PublishReadyToRun>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <PublishSingleFile>true</PublishSingleFile>-->
  </PropertyGroup>

  <ItemGroup>
    <Content Include="NLog.config">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Bcl.AsyncInterfaces" Version="1.1.1" />
    <PackageReference Include="NLog.Config" Version="4.7.2" />
    <PackageReference Include="NLog.Web.AspNetCore" Version="4.9.2" />
    <PackageReference Include="Scar.Common.AutofacHttpClientProvision" Version="1.1.7442.19852" />
    <PackageReference Include="Scar.Common.AutofacInstantiation" Version="1.1.7441.17393" />
    <PackageReference Include="Scar.Common.Sync.Windows" Version="1.1.7459.30945" />
    <PackageReference Include="Scar.Common.View.AutofacWindowProvision" Version="1.1.7459.30974" />
    <PackageReference Include="Scar.Common.WebApi" Version="1.1.7441.17392" />
    <PackageReference Include="Scar.Common.WPF.CollectionView" Version="1.1.7459.30949" />
    <PackageReference Include="Scar.Common.WPF.Startup" Version="1.1.7459.30974" />
    <PackageReference Include="Scar.Common.WPF.View.WindowCreation" Version="1.1.7459.30975" />
    <PackageReference Include="Scar.Services.ImageDownload" Version="1.1.7447.539" />
    <PackageReference Include="Scar.Services.Qwant" Version="1.1.7447.539" />
    <PackageReference Include="Scar.Services.UClassify" Version="1.1.7446.18264" />
    <PackageReference Include="Scar.Services.Yandex" Version="1.1.7459.32534" />
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="4.7.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Contracts.DAL\Contracts.DAL.csproj" />
    <ProjectReference Include="..\Contracts\Contracts.csproj" />
    <ProjectReference Include="..\Core\Core.csproj" />
    <ProjectReference Include="..\DAL\DAL.csproj" />
    <ProjectReference Include="..\Resources\Resources.csproj" />
    <ProjectReference Include="..\ViewModel\ViewModel.csproj" />
    <ProjectReference Include="..\View\View.csproj" />
    <ProjectReference Include="..\WebApi\WebApi.csproj" />
    <ProjectReference Include="..\WindowCreators\WindowCreators.csproj" />
    <ProjectReference Include="..\Windows.Common\Windows.Common.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="IconAlt.ico" />
  </ItemGroup>

  <Target Name="PackRelease" AfterTargets="Publish">
    <Exec Command="del &quot;$(SolutionDir)7zRelease\Portable.7z&quot;" Condition="Exists('$(SolutionDir)7zRelease\Portable.7z')" />
    <Exec Command="&quot;$(SolutionDir)Tools\7za&quot; a &quot;$(SolutionDir)7zRelease\Portable.7z&quot; &quot;$(SolutionDir)Release\*&quot; -xr!*.xml -xr!*.dll.config -xr!*.pdb" />
  </Target>

</Project>