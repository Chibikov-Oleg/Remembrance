<commonView:AnimatedWindowWithoutTemplate
    x:Class="Mémoire.View.Windows.SplashScreenWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commonView="clr-namespace:Scar.Common.WPF.View.Core;assembly=Scar.Common.WPF.View.Core"
    x:ClassModifier="internal"
    Background="Transparent"
    ShowInTaskbar="False"
    StayCentered="True"
    Topmost="True">
    <TextBlock
        Name="MainText"
        DockPanel.Dock="Left"
        Foreground="{StaticResource DarkerBackground}"
        Style="{StaticResource SplashScreen}"
        Text="Mémoire" />
    <commonView:AnimatedWindowWithoutTemplate.Resources>
        <commonView:DesignTimeResourceDictionary Source="pack://application:,,,/Scar.Mémoire.View;component/DesignTimeResources.xaml" />
    </commonView:AnimatedWindowWithoutTemplate.Resources>
</commonView:AnimatedWindowWithoutTemplate>
