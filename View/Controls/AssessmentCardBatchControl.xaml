<ItemsControl
    x:Class="Remembrance.View.Controls.AssessmentCardBatchControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commonView="clr-namespace:Scar.Common.WPF.View;assembly=Scar.Common.WPF.View"
    xmlns:controls="clr-namespace:Remembrance.View.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Remembrance.ViewModel;assembly=Scar.Remembrance.ViewModel"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    d:DataContext="{d:DesignInstance viewModel:AssessmentBatchCardViewModel}"
    x:ClassModifier="internal"
    AlternationCount="100"
    mc:Ignorable="d">
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Closed">
            <b:InvokeCommandAction Command="{Binding WindowClosedCommand, Mode=OneTime}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <ItemsControl.Resources>
        <commonView:DesignTimeResourceDictionary Source="pack://application:,,,/Scar.Remembrance.View;component/DesignTimeResources.xaml" />
    </ItemsControl.Resources>
    <ItemsControl.ItemTemplate>
        <DataTemplate>
            <Border
                Margin="0,5"
                Padding="{StaticResource CommonMarginThickness}"
                Background="{StaticResource Background}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1">
                <ContentControl Content="{Binding Mode=OneTime}">
                    <ContentControl.Resources>
                        <ResourceDictionary>
                            <DataTemplate DataType="{x:Type viewModel:AssessmentTextInputCardViewModel}">
                                <controls:AssessmentTextInputCardControl DataContext="{Binding Mode=OneTime}" Visibility="{Binding IsHidden, Mode=OneWay, Converter={StaticResource ReverseBoolToVisibilityConverter}}" />
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type viewModel:AssessmentViewOnlyCardViewModel}">
                                <controls:AssessmentViewOnlyCardControl DataContext="{Binding Mode=OneTime}" Visibility="{Binding IsHidden, Mode=OneWay, Converter={StaticResource ReverseBoolToVisibilityConverter}}" />
                            </DataTemplate>
                        </ResourceDictionary>
                    </ContentControl.Resources>
                </ContentControl>
            </Border>
        </DataTemplate>
    </ItemsControl.ItemTemplate>
    <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
            <VirtualizingStackPanel Orientation="Vertical" />
        </ItemsPanelTemplate>
    </ItemsControl.ItemsPanel>
</ItemsControl>
