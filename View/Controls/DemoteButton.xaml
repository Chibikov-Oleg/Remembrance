<Button
    x:Class="Remembrance.View.Controls.DemoteButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commonView="clr-namespace:Scar.Common.WPF.View;assembly=Scar.Common.WPF.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Remembrance.ViewModel;assembly=Scar.Remembrance.ViewModel"
    d:DataContext="{d:DesignInstance d:Type=viewModel:LearningInfoViewModel}"
    x:ClassModifier="internal"
    Command="{Binding DemoteCommand, Mode=OneTime}"
    Foreground="{StaticResource Red}"
    IsEnabled="{Binding CanDemote, Mode=OneWay}"
    ToolTip="{lex:Loc Demote}"
    Visibility="{Binding CanDemote, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"
    mc:Ignorable="d">
    <Button.Resources>
        <commonView:DesignTimeResourceDictionary Source="pack://application:,,,/Scar.Remembrance.View;component/DesignTimeResources.xaml" />
    </Button.Resources>
    <Button.Style>
        <StaticResource ResourceKey="ImageButton" />
    </Button.Style>
    <materialDesign:PackIcon Kind="ArrowDown" />
</Button>
